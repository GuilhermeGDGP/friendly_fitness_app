#:import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            Image:
                source: "icons/002-sunrise.png"
            Image:
                source: "icons/001-sun.png"
        GridLayout:
            rows: 1
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/003-sunset.png"
            Image:
                source: "icons/avatars/man.png"
                id: avatar_image
            Image:
                source: "icons/007-crescent-moon.png"
        Label:
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .1
            text: ""
            id: streak_label
        ScrollView:
            pos_hint: {"top": .6, "left": 1}
            size_hint: 1, .4
            GridLayout:
                # Banner grid
                id: banner_grid
                cols: 1
                spacing: 10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
        GridLayout:
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            ImageButton:
                source: "icons/007-add-friend.png"
                on_release: print("RELEASED AND FRIEND BUTTON")
            ImageButton:
                source: "icons/workouts/football.png"
                on_release: print("RELEASED FOOTBALL BUTTON")
            ImageButton:
                source: "icons/workouts/ice-hockey.png"
                on_press:
                    self.source = "icons/avatars/boy.png"
                on_release:
                    self.source = "icons/workouts/ice-hockey.png"
                    print("RELEASED ICE HOOKEY BUTTON")
